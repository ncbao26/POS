# WebThanhToan Production Environment Configuration

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOST=database
DB_PORT=1433
DB_NAME=WebThanhToan
DB_USERNAME=sa
DB_PASSWORD=YourStrongPassword123!
MSSQL_PID=Express

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
SPRING_PROFILES_ACTIVE=docker
SERVER_PORT=8080

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET=YourVeryLongAndSecureJWTSecretKeyForProductionEnvironment123456789
JWT_EXPIRATION=86400000

# ===========================================
# NGINX CONFIGURATION
# ===========================================
NGINX_PORT=80
NGINX_SSL_PORT=443
DOMAIN_NAME=yourdomain.com

# ===========================================
# REDIS CONFIGURATION (Optional)
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=YourRedisPassword123!

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/webthanhtoan/application.log

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/opt/backups/webthanhtoan

# ===========================================
# MONITORING CONFIGURATION
# ===========================================
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================
JVM_MIN_HEAP=512m
JVM_MAX_HEAP=1024m
JVM_GC_TYPE=G1GC

# ===========================================
# SSL CONFIGURATION
# ===========================================
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/yourdomain.crt
SSL_KEY_PATH=/etc/ssl/private/yourdomain.key

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com 